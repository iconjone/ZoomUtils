{
  "name": "Zoom Utils Revamp",
  "description": "Zoom Utils for Zoom University",
  "version": "2.0",
  "manifest_version": 2,

  "permissions": ["activeTab", "storage"],
  "icons": {
    "16": "icons/icon_16.png",
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup/popup.html",
    "default_title": "Zoom Utils Revamp",
    "default_icon": {
      "16": "icons/icon_16.png",
      "48": "icons/icon_48.png",
      "128": "icons/icon_128.png"
    }
  },
  "options_ui": {
    "page": "options/options.html"
  }
}
